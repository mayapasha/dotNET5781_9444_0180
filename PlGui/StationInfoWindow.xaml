<Window x:Class="PlGui.StationInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="StationInfoWindow" Height="450" Width="800" Background="#FFFFC8A1" >
    <Grid>
        <ListBox x:Name="lb_stations" HorizontalAlignment="Left" Height="233" Margin="37,82,0,0" VerticalAlignment="Top" Width="705" MouseDoubleClick="lb_stations_MouseDoubleClick" ItemsSource="{Binding}" Background="#FFE1FFFC" />
        <Button x:Name="b_add_station" Content="add station" HorizontalAlignment="Left" Margin="37,343,0,0" VerticalAlignment="Top" Width="128" Height="44" Click="b_add_station_Click"/>
        <Label Content="double click on a station to see more information" HorizontalAlignment="Left" Margin="37,27,0,0" VerticalAlignment="Top" Width="567" Height="50" FontSize="25" Background="{x:Null}"/>

    </Grid>
</Window>
