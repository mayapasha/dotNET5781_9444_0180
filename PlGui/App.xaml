<Application x:Class="PlGui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PlGui"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize"  Value="18" />
            <Setter Property="Background" Value="#FFFDF393"/>
            <Setter Property="Foreground" Value="#FF801458"/>
            <Setter Property="FontWeight"  Value="Bold" />
            <Setter Property="Width" Value="256" />
            <Setter Property="Height" Value="68"/>
            <Setter Property="FontFamily" Value="Aharoni"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FF801458"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Baskerville Old Face"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FFFF5A80"/> 
        </Style>
    </Application.Resources>
</Application>
