<Window x:Class="dotnet_03b_9444_0180.AddBusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotnet_03b_9444_0180"
        mc:Ignorable="d"
        Title="Add Bus" Height="450" Width="800" >
    <Window.Background>
        <ImageBrush ImageSource="Sketch00102.png"/>
    </Window.Background>
    <Grid Margin="0,-26,-2227,-21">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="296*"/>
            <ColumnDefinition Width="832*"/>
            <ColumnDefinition Width="1891*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="189*"/>
            <RowDefinition Height="256*"/>
        </Grid.RowDefinitions>

        <TextBox Name="tblicense" HorizontalAlignment="Left" Height="48" Margin="104,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="370" FontSize="20"  Grid.Column="1"  PreviewTextInput="NumberValidationTextBox"/>
        <Label Content="Enter license number (number formatting)" HorizontalAlignment="Left" VerticalAlignment="Top" Width="390" Height="49" FontSize="17" Grid.ColumnSpan="2" Margin="10,40,0,0" Background="#FFAEF3E4" Foreground="#FF4F2274" FontWeight="Bold"/>
        <DatePicker Name="tbdate" HorizontalAlignment="Left" Height="41" Margin="104,0,0,68" Text="write here" VerticalAlignment="Bottom" Width="370" FontSize="20" Grid.Column="1" Background="White"/>
        <Label Content="Enter the start date of the bus" HorizontalAlignment="Left" VerticalAlignment="Center" Width="390" Height="48" FontSize="17" Margin="10,80,0,67" RenderTransformOrigin="0.505,-0.174" Grid.ColumnSpan="2" Background="#FFAEF3E4" Foreground="#FF4F2274" FontWeight="Bold"/>
        <Button Content="create" HorizontalAlignment="Left" Margin="326,187,0,0" VerticalAlignment="Top" Width="107" Height="37" FontSize="24" Click="Button_Click" Grid.Row="1" Grid.Column="1" Background="White" BorderBrush="{x:Null}" Foreground="#FF4B1266" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
